<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.DateCell?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.examentap.LoginController"
      stylesheets="@cssFiles/estilosGenerales.css" alignment="CENTER" spacing="25"
      prefHeight="350.0" prefWidth="400.0">

    <padding>
        <Insets bottom="20.0" right="20.0" top="20.0" left="20.0"/>
    </padding>

    <Label fx:id="title" text="Login" focusTraversable="true"/>
    <TextField fx:id="tf_user" promptText="Username"/>
    <PasswordField fx:id="pf_pass" promptText="Password"/>

    <Button fx:id="btn_invitado" text="Modo Invitado" alignment="BOTTOM_LEFT" onAction="#onUsuarioInvitado"
            style="-fx-border-radius: 0px;-fx-opacity: 20;-fx-background-color: none;">
    </Button>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btn_login" text="Login" onAction="#comprobarUser">
            <graphic>
                <FontIcon iconLiteral="anto-send" iconSize="20" iconColor="black"/>
            </graphic>
        </Button>
        <Button fx:id="btn_signIn" text="Sign in" onAction="#onSignin">
            <graphic>
                <FontIcon iconLiteral="anto-frown" iconSize="20" iconColor="black"/>
            </graphic>
        </Button>
    </HBox>
</VBox>

